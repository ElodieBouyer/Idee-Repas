<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.project.ideerepas"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk 
        android:minSdkVersion="16"
        android:targetSdkVersion="4" />
    
    <!-- Camera use. -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <!-- Permission to record pictures. -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <!-- Permission to read pictures. -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/picture"
        android:label="@string/app_name" >

        <!-- Start activity (menu). -->
        <activity
            android:name=".layout.Start"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Meals List activity. -->
        <activity android:name="fr.project.ideerepas.layout.ListMealLayout" />

        <!-- Adding form activity. -->
        <activity android:name="fr.project.ideerepas.layout.AddMealLayout" />   
                
        <!-- Meal detail -->
        <activity android:name="fr.project.ideerepas.layout.MealLayout" />
        
        <!-- Meal modif -->
        <activity android:name="fr.project.ideerepas.layout.ModifMeal" />
        
    </application>

</manifest>