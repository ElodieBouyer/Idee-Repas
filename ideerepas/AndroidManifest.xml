<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.project.ideerepas"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="4" />

    <!-- Camera use. -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <!-- Permission to record pictures. -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Permission to read pictures. -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/dark_ic_app"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.DeviceDefault.Light.DarkActionBar"
        android:uiOptions="splitActionBarWhenNarrow" >

        <!-- Meals List activity. -->
        <activity
            android:name="fr.project.ideerepas.layout.ListMealLayout">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Adding form activity. -->
        <activity
            android:name="fr.project.ideerepas.layout.AddMealLayout"
            android:parentActivityName="fr.project.ideerepas.layout.ListMealLayout" />

        <!-- Meal detail -->
        <activity
            android:name="fr.project.ideerepas.layout.MealLayout"
            android:parentActivityName="fr.project.ideerepas.layout.ListMealLayout" />

        <!-- Meal modif -->
        <activity
            android:name="fr.project.ideerepas.layout.ModifMeal"
            android:parentActivityName="fr.project.ideerepas.layout.ListMealLayout" />
    </application>

</manifest>